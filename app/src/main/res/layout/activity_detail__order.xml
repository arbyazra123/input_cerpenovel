<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".activity.Detail_Order"
    android:background="@color/colorPrimary">
    <TextView
        android:textColor="#fff"
        android:text="Detail Buku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:background="#b9b9b9"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="13dp">

    </View>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:padding="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:id="@+id/book_cover_Det_iv"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="130dp" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView

                    android:layout_marginBottom="5dp"
                    android:id="@+id/judul_buku_Det_tv"
                    android:layout_marginLeft="10dp"
                    android:text="Judul buku"
                    android:textColor="#efefef"
                    android:textStyle="bold"
                    android:autoSizeMinTextSize="17sp"
                    android:autoSizeMaxTextSize="23sp"
                    android:autoSizeStepGranularity="2sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="Kelas"
                    android:textColor="#e6e6e6"
                    android:autoSizeMinTextSize="14sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeStepGranularity="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/kelas_buku_Det_tv"
                    android:autoSizeMinTextSize="14sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeStepGranularity="5sp"
                    android:textColor="#efefef"
                    android:text="KELAS BUKU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="Kurikulum"
                    android:textColor="#e6e6e6"
                    android:autoSizeMinTextSize="14sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeStepGranularity="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1"

                    android:id="@+id/kurikulum_buku_Det_tv"
                    android:autoSizeMinTextSize="14sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeStepGranularity="5sp"
                    android:textColor="#efefef"
                    android:text="Kur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="Jenis"
                    android:textColor="#e6e6e6"
                    android:autoSizeMinTextSize="14sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeStepGranularity="2sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1"

                    android:id="@+id/jenis_buku_Det_tv"
                    android:autoSizeMinTextSize="14sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeStepGranularity="2sp"
                    android:textColor="#ededed"
                    android:text="jenis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>

            </TableRow>
        </TableLayout>



    </LinearLayout>
    <View
        android:background="#b9b9b9"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="13dp">

    </View>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#fff"
            android:text="Detail Transaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:text="N I S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="4"
                    android:id="@+id/nis_tv"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:text="id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:text="Nama Peminjam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="4"
                    android:id="@+id/nama_peminjam_tv"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:text="id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:text="Jumlah Dipinjam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="4"
                    android:id="@+id/jumlah_dipinjam_Det_tv"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:text="id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:text="Tanggal Pinjam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="4"
                    android:id="@+id/tanggal_pinjam_tv"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:text="id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:text="Tanggal Kembali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="4"
                    android:id="@+id/tanggal_kembali_tv"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:text="id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:text="Total Denda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="4"
                    android:id="@+id/total_denda_tv"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:text="id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:text="Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="4"
                    android:id="@+id/status_detail_tv"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:text="id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <View
        android:background="#b9b9b9"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="13dp">

    </View>
<LinearLayout
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#fff"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="ID TRANSAKSI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/detail_idtrans_tv"
android:gravity="center"
            android:text="50"
            android:textStyle="bold"
            android:textSize="15sp"
            android:elevation="5dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/bg_insert4"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#fff"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="QR CODE TRANSAKSI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:padding="5dp"
                android:elevation="5dp"
                android:background="@drawable/bg_insert4"
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <ImageView
                    android:id="@+id/detail_barcode_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

</LinearLayout>
</ScrollView>