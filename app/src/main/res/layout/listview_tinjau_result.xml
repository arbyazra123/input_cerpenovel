<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@color/colorPrimary">
        <TextView
            android:textColor="#fff"
            android:text="Detail Buku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#b9b9b9"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="13dp">

        </View>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:id="@+id/book_cover_Det_iv_tinjau"
                android:scaleType="centerCrop"
                android:layout_width="100dp"
                android:layout_height="130dp" />
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TableRow>
                    <TextView

                        android:id="@+id/judul_buku_Det_tv__tinjau"
                        android:text="Judul buku"
                        android:textColor="#efefef"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_weight="1"
                            android:text="Kelas"
                            android:textColor="#e6e6e6"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_weight="3"
                            android:id="@+id/kelas_buku_Det_tv_tinjau"
                            android:textSize="14sp"
                            android:textColor="#efefef"
                            android:text="KELAS BUKU"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_weight="1"
                            android:text="Kurikulum"
                            android:textColor="#e6e6e6"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_weight="4"
                            android:id="@+id/kurikulum_buku_Det_tv_tinjau"
                            android:textSize="14sp"
                            android:textColor="#efefef"
                            android:text="Kur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_weight="1"
                            android:text="Jenis"
                            android:textColor="#e6e6e6"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_weight="4"
                            android:id="@+id/jenis_buku_Det_tv_tinjau"
                            android:textSize="14sp"
                            android:textColor="#ededed"
                            android:text="jenis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </TableRow>
                </TableLayout>

            </LinearLayout>
        </LinearLayout>
        <View
            android:background="#b9b9b9"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="13dp">

        </View>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#fff"
                android:text="Detail Transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:text="ID Transaksi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="5"
                        android:id="@+id/id_transaksi_result_tinjau_tinjau"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:text="id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:text="N I S"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="5"
                        android:id="@+id/nis_tv_tinjau"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:text="id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:text="Nama Peminjam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="5"
                        android:id="@+id/nama_peminjam_tv_tinjau"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:text="id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:text="Jumlah Dipinjam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="5"
                        android:id="@+id/jumlah_dipinjam_Det_tv_tinjau"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:text="id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:text="Tanggal Pinjam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="5"
                        android:id="@+id/tanggal_pinjam_tv_tinjau"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:text="id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:text="Tanggal Kembali"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="5"
                        android:id="@+id/tanggal_kembali_tv_tinjau"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:text="id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_weight="1"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:text="Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="5"
                        android:id="@+id/status_detail_tv_tinjau"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:text="id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
        <View
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="#b9b9b9"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/detail_order_setuju_tinjau"
                android:textColor="#fff"
                android:text="Setujui"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_insert_3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/detail_order_tolak_tinjau"
                android:textColor="#fff"
                android:text="Tolak"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_insert_3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>